# ==============================================
# DATABASE CONFIGURATION (MySQL)
# ==============================================
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:password@localhost:3306/ecommerce"

# ==============================================
# JWT CONFIGURATION
# ==============================================
# Generate secrets dengan command:
# Windows PowerShell: node -e "console.log(require('node:crypto').randomBytes(32).toString('hex'))"
# Linux/Mac: openssl rand -hex 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ==============================================
# EMAIL CONFIGURATION (Nodemailer)
# ==============================================
# SMTP Settings (contoh untuk Gmail)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"

# Alternatif Email Providers:
# 
# GMAIL (Free - 500 emails/day)
# - Gunakan App Password (bukan password biasa)
# - Cara: Google Account > Security > 2-Step Verification > App passwords
# EMAIL_HOST="smtp.gmail.com"
# EMAIL_PORT=587
# 
# BREVO/SENDINBLUE (Free - 300 emails/day)
