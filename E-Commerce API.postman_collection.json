						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{accessToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/auth/signout",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"signout"
							]
						},
						"description": "Logout user (requires authentication)"
					},
					"response": []
				}
			],
